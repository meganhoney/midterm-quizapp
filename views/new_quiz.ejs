            <option value="2">Fill in the blank</option>
          </select>
        </div>
        <div id="question-input-2" class="mb-3">
          <!-- question text and answer inputs added via jQuery in new_quiz.js -->
        </div>
        <div class="d-flex mb-3">
          <label for="question-3" class="form-label">Question 3</label>
          <select class="form-select ml-2 create-question" id="question-3">
            <option selected>Question Type</option>
            <option value="1">Multiple Choice</option>
