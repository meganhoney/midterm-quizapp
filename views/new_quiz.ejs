    <section class="container new-quiz">
      <h2>Create Quiz</h2>
      <form action="/" method="POST"id="new-quiz-form">
        <div class="d-flex mb-3">
          <label for="quiz-title" class="form-label">Title:</label>
          <input type="text" class="form-control ml-2" id="quiz-title" placeholder="What would you like to call your quiz?">
        </div>
        <div class="d-flex mb-3">
          <label for="quiz-description" class="form-label">Description:</label>
          <input type="text" class="form-control ml-2" id="quiz-description" placeholder="Write a brief description of your quiz.">
        </div>
        <div class="d-flex mb-3">
          <label for="quiz-topic" class="form-label">Topic:</label>
          <select class="form-select ml-2" id="quiz-topic">
            <option selected>Pick a topic</option>
            <option value="general">General Trivia</option>
            <option value="food">Food & Drink</option>
            <option value="geo">Geography</option>
            <option value="lit">Literature</option>
            <option value="ent">Entertainment</option>
            <option value="pop">Pop Culture</option>
            <option value="sport">Sports</option>
            <option value="sci">Science & Technology</option>
          </select>
        </div>
        <div class="form-check form-switch mb-3">
          <input class="form-check-input" type="checkbox" role="switch" id="quiz-private">
          <label class="form-check-label" for="quiz-public">Private (Private quizzes are only visible to the creator & those with a link)</label>
        </div>
        <div class="d-flex mb-3">
          <label for="question-1" class="form-label">Question 1</label>
          <select class="form-select ml-2 create-question" id="question-1">
            <option>Question Type</option>
            <option value="1">Multiple Choice</option>
            <option value="2">Fill in the blank</option>
          </select>
        </div>
        <div id="question-input-1" class="mb-3">
          <!-- question text and answer inputs added via jQuery in new_quiz.js -->
        </div>
        <div class="d-flex mb-3 test">
          <label for="question-2" class="form-label">Question 2</label>
          <select class="form-select ml-2 create-question" id="question-2">
            <option>Question Type</option>
